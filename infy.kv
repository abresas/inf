BoxLayout:
    padding: 0
    orientation: 'horizontal'
    resultsarea: results
    textarea: text
    StackLayout:
        size_hint: (None, None)
        size: (60, root.height)
        padding: (6,6)
        canvas:
            Color:
                rgba: .9, .9, .9, 1
            Rectangle:
                pos: self.pos
                size: self.size
        LoadButton:
            background_normal: 'assets/icon-load48.png'
            background_down: 'assets/icon-load48.png'
        SaveButton:
            background_normal: 'assets/icon-save48.png'
            background_down: 'assets/icon-save48.png'
    BoxLayout:
        size_hint: (None, None)
        size: (root.width - 60, root.height)
        orientation: 'horizontal'
        padding: 0
        TextInput:
            id: results
            size_hint: (.3, 1)
            is_focusable: False
            halign: 'right'
            border: (0, 5, 0, 0)
            background_color: (.9,.9,.9,1)
        CodeInput:
            id: text
            size_hint: (.7, 1)
            on_text: app.text_changed(self.text)
            background_color: (1,1,1,1)

<LoadButton, SaveButton>:
    size: 48, 48
    size_hint: None, None
    padding: (6,6)

<TextInput, CodeInput>:
    font_size: 40
    font_name: 'RobotoMono-Regular'
    background_normal: 'assets/white.png'
    background_active: 'assets/white.png'
    text_height: self.height - (len(self._lines)-1) * self.line_height - 55
    padding: 50
    padding_y: [50, 50]
    multiple: False
    filter: ["*.txt", "*.md"]
    padding: (30, 30)
    size: 48, 48
    size_hint: None, None
